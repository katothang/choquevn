@model Models.EF.DanhMucSanPham

@{
    ViewBag.Title = "Tạo mới danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
}

<section class="content container-fluid">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Tạo mới danh mục sản phẩm</h3>
        </div>
        <div class="box-header with-border">
            <h4>Danh mục sản phẩm</h4>
        </div>
        <br>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
              
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <b class="control-label col-md-2"> Tên danh mục</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo mới" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="box-footer">
        @Html.ActionLink("Danh sách", "Index")
    </div>
</section>
@section script{
    <script>
        CKEDITOR.replace('description');
    </script>
}