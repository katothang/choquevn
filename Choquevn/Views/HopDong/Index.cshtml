@model IEnumerable<Models.EF.HopDong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="color:#ff6a00">HỢP ĐỒNG</h3>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin chi tiết sản phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
              
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Tên khách hàng</th>
                                <th>Ngày tạo</th>
                                <th>Nhân viên</th>
                                <th>Khách hàng</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.Id">
                                    <td>@item.KhachHang.TenKhachHang</td>
                                    <td>@item.NgayTao</td>
                                    <td>
                                        @if (!item.MaNhanVien.HasValue)
                                        { <span>(Chưa ký)</span> }
                                        else
                                        { <span>@item.MaNhanVien</span> }
                                    </td>
                                    <td>
                                        @if (item.KhachHangXacNhan.HasValue && item.KhachHangXacNhan.Value == true)
                                        { <span>@item.KhachHang.TenKhachHang</span>}
                                        else
                                        { <span>(Chưa ký)</span>}
                                    </td>
                                    @using (Html.BeginForm("XacNhanHopDong", "HopDong", FormMethod.Get))
                                    {
                                        @Html.Hidden("id", @item.Id)
                                        <td>
                                            <button type="submit" class="btn btn-info">Chi tiết</button>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>