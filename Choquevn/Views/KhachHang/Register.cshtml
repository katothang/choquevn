@model CuaHangDoGo.Models.RegisterModel
@{
    ViewBag.Title = "Đăng ký thành viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Bootstrap Core CSS -->

<h3 style="color:#ff6a00">THÔNG TIN ĐĂNG KÝ</h3>
@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

@using (Html.BeginForm("Register", "KhachHang", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })


    <fieldset>
        <legend class=""></legend>
        <div class="row">
            <div class="col-md-11">


                @Html.LabelFor(model => model.username, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.username, new { @class = "form-control input-lg-5", @placeholder = "Vui lòng nhập tài khoản" })
                <p></p>


                <div class="control-group">
                    @Html.LabelFor(model => model.password, new { @class = "control-label" })
                    @Html.PasswordFor(model => model.password, new { @class = "form-control input-lg-5", @placeholder = "Vui lòng nhập mật khẩu" })
                    <p></p>
                </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.repassword, new { @class = "control-label" })
                    @Html.PasswordFor(model => model.repassword, new { @class = "form-control input-lg-5", @placeholder = "Vui lòng nhập lại mật khẩu" })
                    <p></p>
                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.fullname, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.fullname, new { @class = "form-control input-lg-5", @placeholder = "Vui lòng nhập họ tên" })
                    <p></p>
                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.address, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.address, new { @class = "form-control input-lg-5", @placeholder = "Vui lòng nhập địa chỉ" })
                    <p></p>
                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.phone, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.phone, new { @class = "form-control input-lg-5", @placeholder = "Vui lòng nhập địa chỉ" })
                    <p></p>
                </div>

                <div class="control-group">
                    @Html.LabelFor(model => model.email, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.email, new { @class = "form-control input-lg-5", @placeholder = "Vui lòng nhập email" })

                    <p></p>
                </div>
                <div class="control-group">
                    <!-- Button -->
                    <div class="controls">
                        <button class="btn btn-info">Đăng ký</button>
                    </div>
                </div>

            </div>
        </div>
        <br />
    </fieldset>
}