@model IEnumerable<Models.EF.HoaDon>
@{
    ViewBag.Title = "Danh sách hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin hóa đơn
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                            <tr>

                                <th>Mã hóa đơn</th>
                                <th>Ngày tạo</th>
                                <td>Trang thái</td>
                                <td></td>

                            </tr>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var item in Model)
                            {
                                <tr id="row_@item.MaHoaDon">
                                    <td>@item.MaHoaDon</td>
                                    <td>@item.ThoiGianTao</td>
                                    <td>@if (item.DaThanhToan.HasValue && item.DaThanhToan == true)
                                    { 
                                            <span>Đã thanh toán</span>
                                    }
                                    else
                                    {
                                            <span>Chưa thanh toán</span>
                                    }</td>
                                    <td><a href="/KhachHang/BillDetail/@item.MaHoaDon"> [Chi tiết]</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->

        </div>

    </div>
</div>
