@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var customer = (Models.EF.KhachHang)ViewBag.KhachHang;
    var products = (List<CuaHangDoGo.Models.CartModel>)(List<CuaHangDoGo.Models.CartModel>)Session[CuaHangDoGo.Common.CommonConstants.CART];
    var billCode = (string)ViewBag.BillCode;
}

<h3 style="color:#ff6a00">THÔNG TIN THANH TOÁN : @ViewBag.BillCode</h3>

@if (@ViewBag.BillCode != null)
{
    <div class="alert alert-success">Thanh toán thành công</div>
}
<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th colspan="3">Thông tin khách hàng</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td width="150px">Tên khách hàng</td>
                    <td colspan="3"><b>@customer.TenKhachHang</b></td>
                </tr>
                <tr>
                    <td width="150px">Địa chỉ</td>
                    <td><b>@customer.DiaChi</b></td>
                    <td>Điện thoại</td>
                    <td>@customer.DienThoai</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@if (products != null && products.Count > 0)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Thông tin sản phẩm đã đặt
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>

                                    <th>Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Đơn vị</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in products)
                                {
                                    <tr id="row_@item.id">
                                        <td><b>@item.product_name</b></td>
                                        <td>@item.amount</td>
                                        <td>@item.price</td>
                                        <td>@item.unit</td>
                                        <td>@item.totalprice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
}

